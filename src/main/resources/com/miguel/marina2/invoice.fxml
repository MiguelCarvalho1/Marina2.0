<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miguel.marina2.InvoiceController">
    <Label text="Client Name:" />
    <TextField fx:id="clientNameTextField" />

    <Label text="Entry Date and Time (yyyy-MM-dd HH:mm:ss):" />
    <TextField fx:id="entryDateTimeTextField" />

    <Label text="Exit Date and Time (yyyy-MM-dd HH:mm:ss):" />
    <TextField fx:id="exitDateTimeTextField" />

    <Button text="Generate Invoice" onAction="#generateInvoice" />
    <Label fx:id="invoiceLabel" />
</VBox>
